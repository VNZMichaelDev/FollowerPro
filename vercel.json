{
  "version": 2,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth?path=:path*"
    },
    {
      "source": "/api/orders/:path*",
      "destination": "/api/orders?path=:path*"
    },
    {
      "source": "/api/admin/:path*",
      "destination": "/api/admin?path=:path*"
    },
    {
      "source": "/api/services",
      "destination": "/api/services/index"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/login.html",
      "destination": "/public/login.html"
    },
    {
      "source": "/register.html",
      "destination": "/public/register.html"
    },
    {
      "source": "/dashboard.html",
      "destination": "/public/dashboard.html"
    },
    {
      "source": "/:path*",
      "destination": "/public/:path*"
    }
  ]
}
